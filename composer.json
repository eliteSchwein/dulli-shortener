{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "packages/*",
            "options": { "symlink": true }
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^4",
        "doctrine/doctrine-bundle": "^3",
        "doctrine/doctrine-migrations-bundle": "^4",
        "doctrine/orm": "^3",
        "pentatrion/vite-bundle": "^8",
        "setono/bot-detection-bundle": "dev-main",
        "symfony/asset": "^8",
        "symfony/asset-mapper": "^8",
        "symfony/console": "^8",
        "symfony/doctrine-messenger": "^8",
        "symfony/dotenv": "^8",
        "symfony/expression-language": "^8",
        "symfony/flex": "^2",
        "symfony/form": "^8",
        "symfony/framework-bundle": "^8",
        "symfony/http-client": "^8",
        "symfony/intl": "^8",
        "symfony/mime": "^8",
        "symfony/monolog-bundle": "^4",
        "symfony/notifier": "^8",
        "symfony/process": "^8",
        "symfony/property-access": "^8",
        "symfony/property-info": "^8",
        "symfony/runtime": "^8",
        "symfony/serializer": "^8",
        "symfony/string": "^8",
        "symfony/translation": "^8",
        "symfony/twig-bundle": "^8",
        "symfony/validator": "^8",
        "symfony/yaml": "^8",
        "twig/extra-bundle": "^3",
        "twig/twig": "^3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^8",
            "docker": false
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^8",
        "symfony/debug-bundle": "^8",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^7.4",
        "symfony/stopwatch": "^8",
        "symfony/web-profiler-bundle": "^8"
    }
}
